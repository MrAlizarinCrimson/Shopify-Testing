<h1>{{ section.settings.heading }}</h1>
<div class="customContainer">

  {%for block in section.blocks %}
  <div class="customContainer_slide">
    <h2 class="customContainer_title">{{ block.settings.title }}</h2>
    <div class="customContainer_image">
      <img
        src="https://cdn.shopify.com/s/files/1/0563/4883/5925/t/10/assets/puma-256.png?v=1684709381"
      />
    </div>
    <p>Text about photo</p>
  </div>
</div>
  {% endfor %}

  <style>
    .customContainer {
      font-family: Arial, Helvetica, sans-serif;
      padding: 1em
      display: flex;
      gap: 1em;
    }
    .customContainer_slide {
      padding: 1em;
      -webkit-box-shadow: 0px 10px 13px -7px #787272,
        0px -1px 23px -3px rgba(0, 0, 0, 0.52);
      box-shadow: 0px 10px 13px -7px #888686,
        0px -1px 23px -3px rgba(125, 123, 123, 0.52);
    }
    .customContainer_title {
    }
    .customContainer_image img{
      width: 10vw;
    }
  </style>
      

{% schema %}
  {
    "name": "Logos",
    "settings": [
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Heading",
        "default" : "My Custom Heading"
      }
    ],
    "blocks" : [
    {
      "type" : "column",
      "name" : "slide",
      "settings" : [
      {
        "type" : "text",
        "id" : "title",
        "label" : "Title"
      }
    ],
    }
  ],
    "presets": [
      {
        "name": "Logos"
      }
    ]  
  }
{% endschema %}

